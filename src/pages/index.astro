---
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

const data = Astro.locals
// @ts-ignore
const username: string | null = data.username

const error = decodeURIComponent(new URLSearchParams(Astro.url.search).get('error') || '')

---

<BaseLayout
  title="Cronize - Home"
  description="Cronize is a simple, easy to use, and free cronjob manager."
>
  <Header />
  <div class="container m-auto text-center bg-muted shadow-lg p-2">
    { username ? <h1>Welcome back, {username}! Go to your <a href="/profile" class="italic hover:underline">profile</a>.</h1> : <h1>Welcome to Cronize!</h1> }
  </div>
  <main class="flex-1">
    <section class="w-full py-8 md:py-10 lg:py-12 h-[75vh] m-auto">
      <div class="container px-4 md:px-6 m-auto h-full flex items-center">
        <div class="grid gap-4 grid-cols-1 lg:grid-cols-4 lg:gap-6 md:w-[80%] m-auto">
          <div class="flex flex-col justify-center space-y-4 col-span-3 m-auto">
            <div class="space-y-2">
              <h1 class="text-4xl font-bold tracking-tighter sm:text-5xl xl:text-6xl/none text-orange-500 md:max-w-[80%]">
                Manage Your Cronjobs <u>Today</u>.
              </h1>
              <p class="md:max-w-[80%] md:text-xl">
                Streamline your scheduled tasks with our powerful cronjob manager. Automate your workflows, monitor
                status, and activate/deactivate anytime - all in one intuitive platform.
              </p>
            </div>
            <div class="flex flex-col gap-2 min-[400px]:flex-row">
              <a
                href="/login"
                class="inline-flex h-10 items-center justify-center rounded-md bg-primary px-8 text-sm font-medium text-primary-foreground shadow transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50"
              >
                Get Started
              </a>
              <a
                href="https://www.github.com/mtlh/cronize"
                target="_blank"
                class="inline-flex h-10 items-center justify-center rounded-md border border-input bg-background px-8 text-sm font-medium shadow-sm transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50"
              >
                Github
              </a>
            </div>
          </div>
          <img
            src="/cronjob_icon.svg"
            width="400"
            height="400"
            alt="Hero"
            class="mx-auto aspect-video overflow-hidden rounded-xl object-cover lg:order-last lg:aspect-square"
          />
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>
