---
import SideNavbar from "../../components/SideNavbar"
import BaseLayout from "../../layouts/BaseLayout.astro"
import ThemeToggle from '../../components/ThemeToggle.astro';
import CronjobInfo from "../../components/CronjobInfo"

const data: any = Astro.locals;
const id = parseInt(Astro.params.id || '0');

---

<BaseLayout
  title="Cronize - Cronjob Details"
  description="Cronize is a simple, easy to use, and free cronjob manager."
>
    <div class="hidden">
        <ThemeToggle />
    </div>
    <SideNavbar client:load username={data.username}>
        <CronjobInfo client:load id={id} />
    </SideNavbar>
</BaseLayout>
